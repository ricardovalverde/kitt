<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CarFragmentActivity">


    <LinearLayout
        android:id="@+id/catalogoCar"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="70dp">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="133dp"
            android:layout_gravity="center|top"
            android:layout_marginStart="9dp"
            android:src="@drawable/generic" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="25dp"
            android:text="@string/catalogo"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/robotolight"
        android:text="@string/noticias"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom">

        <androidx.cardview.widget.CardView
            android:id="@+id/noticias_item"
            android:layout_width="match_parent"
            android:layout_height="410px"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="55dp"
            android:backgroundTint="@android:color/transparent"
            app:cardCornerRadius="20dp">

            <ProgressBar
                android:id="@+id/progress_bar_carf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <include layout="@layout/noticias_item" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewNoticiasCar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <ImageView
        android:id="@+id/arrowRigth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="240dp"
        android:src="@drawable/ic_baseline_chevron_right_24" />


</FrameLayout>